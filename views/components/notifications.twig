<h4 class="font-weight-light">Notifications</h4>
<div class="list-group list-group-flush">
    {% for notification in notifications %}
        {% if notification.seen %}
            <a href="#" class="list-group-item list-group-item-action mb-1">
                <span><svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-circle" viewBox="0 0 16 16"><path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/></svg></span>
                <span class="ml-2"><strong>Ringier:</strong></span>
                {{ notification.message }}
            </a>
        {% else %}
            <a href="/notification/{{ notification._id }}" class="list-group-item list-group-item-action mb-1">
                <span class="text-primary"><svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-circle-fill" viewBox="0 0 16 16"> <circle cx="8" cy="8" r="8"/></svg></span>
                <span class="ml-2"><strong>Ringier:</strong></span>
                {{ notification.message }}
            </a>
        {% endif %}
    {% endfor %}
</div>