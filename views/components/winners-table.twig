<p class="text-secondary">Winners</p>


{% for event in competition.events %}
    <table class="table table-sm table-hover text-muted ">
        <thead>
        <tr>
            <th scope="col">{{ event.name }}</th>
            <th scope="col">{{ event.place }}</th>
            <th scope="col">{{ event.address }}</th>
            <th scope="col">{{ event.date | date("d/m/Y") }}</th>
            <td scope="col">{{ event.ticketSets }} x {{ event.tickets }}</td>
        </tr>
        </thead>

        <tbody>
        {% for application in event.applications %}
            {% if application.isWinner %}
                <tr>
                    <td>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                             class="bi bi-person" viewBox="0 0 16 16">
                            <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
                        </svg>
{#                        {{ application.userId }} | {{ user.email }}#}
                        {{ application.userId }}
                    </td>
                </tr>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>
{% endfor %}
